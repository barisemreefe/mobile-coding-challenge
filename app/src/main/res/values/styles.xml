<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PhotoDetailInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">2</item>
        <item name="android:layout_marginLeft">@dimen/grid</item>
        <item name="android:layout_marginRight">@dimen/grid</item>
        <item name="android:layout_marginTop">@dimen/half_grid</item>
        <item name="android:layout_marginBottom">@dimen/half_grid</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>
